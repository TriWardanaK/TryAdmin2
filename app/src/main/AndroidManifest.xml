<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TryAdmin2"
        tools:targetApi="31">
        <activity
            android:name=".view.viewmodel.book.update.UpdateBookActivity"
            android:exported="true" />
        <activity
            android:name=".view.viewmodel.book.detail.DetailBookActivity"
            android:exported="true"
            android:theme="@style/Theme.TryAdmin2.NoActionBar" />
        <activity
            android:name=".view.viewmodel.book.add.AddBookActivity"
            android:exported="true" />
        <activity
            android:name=".view.viewmodel.admin.update.UpdateActivity"
            android:exported="true" />
        <activity
            android:name=".view.viewmodel.admin.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.viewmodel.admin.signup.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".view.viewmodel.admin.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>